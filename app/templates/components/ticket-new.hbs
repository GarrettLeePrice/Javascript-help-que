{{#if showTicketForm}}
<h3>New Ticket:</h3>
<form {{action 'saveTicket' on='submit'}}>
  <div class="form-group">
    <label for="who">Who</label>
    {{input value=who id="who" class="form-control" required="required"}}
  </div>

  <div class="form-group">
    <label for="what">What</label>
    {{input value=what id="what" class="form-control" required="required"}}
  </div>

  <div class="form-group">
    <label for="where">Where</label>
    {{textarea rows="3" value=where id="where" class="form-control" required="required"}}
  </div>


  <button type="submit" class="btn btn-success">Save</button>
  <button type="button" {{action 'hideTicketForm'}} class="btn btn-success">Cancel</button>

</form>


{{else}}
  <button class="btn btn-default" {{action 'displayTicketForm'}}>Add New Ticket</button>
{{/if}}
